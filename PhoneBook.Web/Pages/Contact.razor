@page "/"
@inherits ContactsBase

@if (Contacts == null)
{
    <h3>No content to display</h3>
    <DisplaySpinner />
}
else
{
    <div class="row mb-3">
        <div class="col-md-6">
            <h3>Contacts</h3>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="CreateContact" class="btn btn-primary">Add New</a>
        </div>
    </div>
    @if (Contacts.Any())
    {
        <div class="row mt-3">
            <DisplayContacts Contacts="@Contacts"></DisplayContacts>
        </div>
    }
    else
    {
        <p>No contacts found.</p>
    }
}