@page "/ContactDetails/{Id:int}"
@inherits ContactDetailsBase

@if (Contact == null && ErrorMessage == null)
{
    <DisplaySpinner />
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Contact Details</h3>
    <div class="row">
        <div class="col-md-6">
            <h3>
                @Contact.FirstName
                @Contact.LastName
            </h3>
            <p class="mb-4">Email: @Contact.Email</p>
            <p class="mb-4">Password: @Contact.Password</p>
            <p class="mb-4">Category: @Contact.CategoryName</p>
            @if (Contact.SubcategoryId != null)
            {
                <p class="mb-4">Subcategory: @Contact.SubcategoryName</p>
            }
            <p class="mb-4">Phone: @Contact.PhoneNumber</p>
            <p class="mb-4">BirthDate: @Contact.BirthDate.ToString("dd-MM-yyyy") r.</p>
            <div>
                <a href="/UpdateContact/@Contact.Id" class="btn btn-warning">Edit</a>
                <div>
                    <button @onclick="(() => RemoveContact())"
                            class="btn btn-danger">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}