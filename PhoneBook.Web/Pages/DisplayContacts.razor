@inherits DisplayContactsBase

@foreach (var contact in Contacts)
{
    <div class="col-md-3 mb-2">
        <a href="/ContactDetails/@contact.Id">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @contact.FirstName
                        @contact.LastName
                    </h5>
                    <p class="card-text">
                        Phone: @contact.PhoneNumber
                    </p>
                    <p class="card-text">
                        Email: @contact.Email
                    </p>
                </div>
            </div>
        </a>
    </div>
}